<!doctype html>
<html lang="<%= site.locale %>">
  <head>
    <%= render "head", metadata: site.metadata, title: data.title %>
  </head>
  <body class="<%= data.layout %> <%= data.page_class %> flex flex-col h-screen bg-black">
    <header class="mx-auto p-4 mt-10 sm:mt-40 border-red-600 border-4 rounded-xl">
      <img class="h-40" src="<%= relative_url '/images/logo.svg' %>" alt="Crosstown Shuttle" />
    </header>
    <main class="flex-grow"><%= yield %></main>
    <%= render "footer", metadata: site.metadata %>
  </body>
</html>
